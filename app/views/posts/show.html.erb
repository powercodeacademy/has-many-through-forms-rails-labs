<h1><%= @post.title %></h1>
<h3>Categories:</h3>
<ul>
  <% @post.categories.each do |category| %>
    <li><%= category.name %></li>
  <% end %>
</ul>
<p><%= @post.content %></p>
<h3>Comments:</h3>
<ul>
<% @post.comments.each do |comment| %>
  <li><%= comment.user.username %>: <%= comment.content %></li>
<% end %>
</ul>
<h3>Commenters:</h3>
<ul>
<% @post.users.distinct.each do |user| %>
  <li><%= user.username %></li>
<% end %>
</ul>
